<body>
  <h1>Shembeteng Translator</h1>
  <p>Powered by Kuch â€“ Mtaa Genius</p>

  <textarea id="input" placeholder="Andika Kiswahili yako hapa..."></textarea><br>

  <select id="style">
    <option value="mbata">mbata</option>
    <option value="mbete">mbete</option>
    <option value="mbitimboto">mbitimboto</option>
    <option value="mbutu">mbutu</option>
  </select><br>

  <button onclick="translate()">Chapisha Shembeteng!</button><br>

  <textarea id="output" readonly placeholder="Shembeteng yako itaonekana hapa..."></textarea>

  <script>
    function translate() {
      const input = document.getElementById("input").value;
      const style = document.getElementById("style").value;
      const vowels = "aeiouAEIOU";
      let result = "";

      for (let char of input) {
        result += char;
        if (vowels.includes(char)) {
          result += style;
        }
      }

      document.getElementById("output").value = result;
    }
  </script>
